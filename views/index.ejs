<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("./partials/head.ejs")%>
</head>
<body>
    <%-include("./partials/nav.ejs")%>

    <div>
        <h2>All my blogs:</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.map((item) => { %>
                <h3><%=item.name %></h3>
                <p><%=item.snippet %></p>
           <% }) %>
       <% } else { %>
        <p>No blogs to display...</p>
       <% } %>

    </div>
</body>
</html>